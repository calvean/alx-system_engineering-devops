#!/usr/bin/env bash
# Serve a web page using nginx
apt update -y
apt install -y nginx
echo "Hello World!" > /var/www/html/index.html
LINE="\\\trewrite ^/redirect_me https://github.com/calvean/alx-system_engineering-devops/tree/master/0x0C-web_server permanent;"
sed -i "24i $LINE" /etc/nginx/sites-available/default

service nginx restart
